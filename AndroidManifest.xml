    <!-- in-app billing example -->
    <uses-permission android:name="com.android.vending.BILLING" />

    <application android:allowBackup="true" android:debuggable="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:name=".ExamplesSelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".BasicUserInterfaceActivity" android:label="@string/title_basic_user_interface" />
        <activity android:name=".SimpleListAdapterActivity" android:label="@string/title_simple_list_adapter" />
        <activity android:name=".CursorAdapterActivity" android:label="@string/title_cursor_adapter" />
        <activity android:name=".ViewPagerActivity" android:label="@string/title_view_pager" />
        <activity android:name=".FragmentsActivity" android:label="@string/title_fragments" />
        <activity android:name=".ActionBarExampleActivity" android:label="@string/title_action_bar" android:theme="@style/Theme.AppCompat.Light" />
        <activity android:name=".IntentsActivity" android:label="@string/title_intents" />
        <activity android:name=".IntentsStartedActivity" android:label="@string/title_intents" />
        <activity android:name=".ActionsActivity" android:label="@string/title_actions" />
        <activity android:name=".BroadcastsActivity" android:label="@string/title_broadcasts" />
        <activity android:name=".InAppBillingActivity" android:label="@string/title_inapp_billing" />
    </application>
</manifest>
