<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              >
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <EditText android:id="@+id/basic_user_interface_edit_content"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="@string/basic_user_interface_edit_content"
              />
    <Button
        android:id="@+id/basic_user_interface_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/basic_user_interface_confirm" />
  </LinearLayout>
  <TextView android:id="@+id/basic_user_interface_result"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="default text"
            />
</LinearLayout>
